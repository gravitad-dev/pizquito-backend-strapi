{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "unit": {
      "type": "enumeration",
      "enum": [
        "unidad",
        "kg",
        "litro",
        "paquete"
      ]
    },
    "price": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "min_stock": {
      "type": "integer"
    },
    "movements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::movement.movement",
      "mappedBy": "item"
    },
    "itemImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier",
      "inversedBy": "items"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "item"
    }
  }
}
