version: "3"
services:
  pizquito-strapi:
    container_name: pizquito-strapi
    build: .
    image:  pizquito-strapi:latest
    restart: unless-stopped
    env_file: .env
    environment:
      DATABASE_CLIENT: ${DATABASE_CLIENT}
      DATABASE_HOST: strapiDB
      DATABASE_PORT: ${DATABASE_PORT}
      DATABASE_NAME: ${DATABASE_NAME}
      DATABASE_USERNAME: ${DATABASE_USERNAME}
      DATABASE_PASSWORD: ${DATABASE_PASSWORD}
      JWT_SECRET: ${JWT_SECRET}
      ADMIN_JWT_SECRET: ${ADMIN_JWT_SECRET}
      APP_KEYS: ${APP_KEYS}
      NODE_ENV: ${NODE_ENV}
      STRAPI_PLUGIN_GRAPHQL_SHADOW_CRUD: true
      HOST: 0.0.0.0
      PORT: 1337
      URL: https://strapi-back.gravitad.xyz
      PROXY: true
#    volumes:
#      - ./config:/opt/app/config
#      - ./src:/opt/app/src
#      - ./package.json:/opt/package.json
#      - ./yarn.lock:/opt/yarn.lock
#      - ./.env:/opt/app/.env
      - ./public/uploads:/opt/app/public/uploads
    ports:
      - "1342:1337"
    networks:
      - strapi
      - nginx_nginx
    depends_on:
      - strapiDB
    healthcheck:
      test: ["CMD", "sh", "-c", "wget -qO- http://127.0.0.1:5173/_health || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  strapiDB:
    container_name: strapiDB
    platform: linux/amd64 #for platform error on Apple M1 chips
    restart: unless-stopped
    env_file: .env
    image: postgres:16.0-alpine
    environment:
      POSTGRES_USER: ${DATABASE_USERNAME}
      POSTGRES_PASSWORD: ${DATABASE_PASSWORD}
      POSTGRES_DB: ${DATABASE_NAME}
    volumes:
 #     - pizquito-backend-strapi:/var/lib/postgresql/data/ #using a volume
      - ./postgresql_data:/var/lib/postgresql/data/ # if you want to use a bind folder

    ports:
      - "5432:5432"
    networks:
      - strapi
      - nginx_nginx

volumes:
  pizquito-backend-strapi:

networks:
  strapi:
    name: strapi
    driver: bridge
  nginx_nginx:
    external: true
